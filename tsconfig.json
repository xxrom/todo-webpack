{
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    "removeComments": true,
    "paths": {
      "@components": ["src/components"],
      "@HOC": ["src/HOC"],
      "@HOC/*": ["src/HOC/*"],
      "@utils": ["src/utils"]
    }
  }
}
